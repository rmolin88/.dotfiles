export GDK_SCALE=2
export QT_SCALE_FACTOR=1.5
# export QT_FONT_DPI=288
export QT_AUTO_SCREEN_SCALE_FACTOR=0

# Thu Nov 16 2017 18:31:  Trying to get an a good configuration
# Sat Jul 28 2018 13:28: New settings 
# Wed Jan 23 2019 06:41: This used to be in i3/config
#  - In the spirit of uniting as many configs as we can.
# the only diff between default/i3/config and predator/i3/config
# is this command below. Makes more sense here.
xrandr --dpi 192 --output DP-0 --panning 3840x2160 \
	--output HDMI-0 --scale 1.25x1.25 --right-of DP-0
