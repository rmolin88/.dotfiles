[
  {
    "name": "arch update",
    "command": "$TERMINAL ~/.config/polybar/scripts/update-arch.sh"
  },
  {
    "name": "arch clean",
    "command": "$TERMINAL ~/.config/polybar/scripts/arch-maintance.sh"
  },
  {
    "name": "network",
    "command": "networkmanager_dmenu"
  },
  {
    "name": "flux day",
    "command": "exec ~/.config/polybar/scripts/flux_/flux -c ~/.config/polybar/scripts/flux_/flux_config.lua -f day"
  },
  {
    "name": "flux night",
    "command": "exec ~/.config/polybar/scripts/flux_/flux -c ~/.config/polybar/scripts/flux_/flux_config.lua -f night"
  },
  {
    "name": "polybar relaunch",
    "command": "exec ~/.config/polybar/scripts/launch.sh"
  },
  {
    "name": "bluetooth wh-1000xm2",
    "command": "exec ~/.config/i3/scripts/bluetooth.lua 'connect' '04:5D:4B:EA:9C:B2'"
  },
  {
    "name": "bluetooth rofi",
    "command": "rofi-bluetooth"
  },
  {
    "name": "bluetooth disconnect",
    "command": "exec ~/.config/i3/scripts/bluetooth.lua 'disconnect'"
  },
  {
    "name": "cheatsheet pdf",
    "command": "exec ~/.config/i3/scripts/cheatsheet/cht.sh"
  },
  {
    "name": "cheatsheet navi",
    "command": "$TERMINAL /usr/bin/navi"
  },
  {
    "name": "cheatsheet cheat.sh",
    "command": "$TERMINAL /usr/bin/cht.sh --shell"
  },
  {
    "name": "audio control",
    "command": "pavucontrol"
  },
  {
    "name": "screenshot full screen",
    "command": "scrot '/tmp/%Y-%m-%d_%T_scrot.png' -e 'xclip -selection clipboard -target image/png -i $f'"
  },
  {
    "name": "screenshot selection",
    "command": "scrot -s '/tmp/%Y-%m-%d_%T_scrot.png' -e 'xclip -selection clipboard -target image/png -i $f'"
  },
  {
    "name": "screenshot window",
    "command": "scrot -u '/tmp/%Y-%m-%d_%T_scrot.png' -e 'xclip -selection clipboard -target image/png -i $f'"
  },
  {
    "name": "screenshot flameshot",
    "command": "flameshot gui"
  },
  {
    "name": "emoji",
    "command": "rofi -show emoji -modi emoji"
  },
  {
    "name": "audio select input",
    "command": "exec ~/.config/i3/scripts/pulseaudio-rofi.sh --input"
  },
  {
    "name": "audio select output",
    "command": "exec ~/.config/i3/scripts/pulseaudio-rofi.sh --output"
  },
  {
    "name": "power off",
    "confirm": true,
    "command": "i3-msg '[class=\".\"] kill' && systemctl poweroff"
  },
  {
    "name": "power reboot",
    "confirm": true,
    "command": "i3-msg '[class=\".\"] kill' && systemctl reboot"
  },
  {
    "name": "power lock",
    "command": "i3lock-fancy"
  },
  {
    "name": "pass root",
    "command": "pass --clip linux/`hostname`/user/root"
  },
  {
    "name": "pass ssh key github",
    "command": "pass --clip linux/`hostname`/ssh_key/id_ed25519_github"
  },
  {
    "name": "pass ssh key digitalocean",
    "command": "pass --clip linux/`hostname`/ssh_key/id_ed25519_digitalocean"
  },
  {
    "name": "pass ssh key gitlab",
    "command": "pass --clip linux/`hostname`/ssh_key/id_ed25519_gitlab"
  },
  {
    "name": "xmodmap reload",
    "command": "xmodmap ~/.Xmodmap"
  },
  {
    "name": "xmodmap dvorak keyboard layout",
    "command": "exec ~/.config/i3/scripts/switch_dvorak.sh"
  }
]
