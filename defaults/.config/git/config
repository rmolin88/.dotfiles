[core]
	editor = nvim

; silence some strange warning
[push]
	default = simple

[diff]
	tool = neovim
[difftool "neovim"]
	cmd = nvim -s -d $LOCAL $REMOTE
	prompt = false
[merge]
	tool = neovim
	conflictstyle = diff3
[mergetool "neovim"]
	cmd = nvim -s -d $BASE $LOCAL $REMOTE $MERGED -c 'wincmd J | wincmd ='

[color]
	ui = auto
[filter "ignoreline"]
	clean = cat
	smudge = "sed '/#ignoreline$/'d"
