[user]
	email = rmolin88@gmail.com
	name = Reinaldo Molina
[alias]
	st = status
	co = checkout
	br = branch
	up = rebase
	ci = commit
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global

; testing
[credential]
	helper = cache --timeout=7200

; silence some strange warning
[push]
	default = simple

[diff]
	tool = neovim
[difftool "neovim"]
	cmd = nvim -d $LOCAL $REMOTE
	prompt = false
[merge]
	tool = neovim
	conflictstyle = diff3
[mergetool "neovim"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[color]
	ui = auto
