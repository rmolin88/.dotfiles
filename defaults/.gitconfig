[user]
	email = rmolin88@gmail.com
	name = Reinaldo Molina
[alias]
	st = status
	co = checkout
	br = branch
	up = rebase
	ci = commit
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global

[credential]
	helper = cache --timeout=7200

; silence some strange warning
[push]
	default = simple

[diff]
	tool = neovim
[difftool "neovim"]
	cmd = nvr -s -d $LOCAL $REMOTE
	prompt = false
[merge]
	tool = neovim
	conflictstyle = diff3
[mergetool "neovim"]
	cmd = nvr -s -d $BASE $LOCAL $REMOTE $MERGED -c 'wincmd J | wincmd ='

[color]
	ui = auto
[filter "ignoreline"]
	clean ="sed '/#ignoreline$/'d"
	smudge = cat
